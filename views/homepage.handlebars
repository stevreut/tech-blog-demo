<!-- Loop over each object in the projects array -->
{{#each blogPosts as |post| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{!{get_emoji}}
      <a href="/blogpost/{{post.id}}">{{post.title}}</a>
    </h2>
    <p>Created on {{post.formattedDate}}</p>
  </div>
  <!--div class="col-md-7">
    <p>
      {{project.description}}
    </p>
  </div-->
</div>
{{/each}}
